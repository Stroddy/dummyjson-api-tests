							"script": {
								"exec": [
									"const res = pm.response.json();\r",
									"const req = JSON.parse(pm.request.body.raw);\r",
									"const userIdFromUrl = pm.request.url.path[1];\r",
									"// 1. Status code is 200\r",
									"pm.test(\"Status code is 200\", () => {\r",
									"    pm.response.to.have.status(200);\r",
									"});\r",
									"\r",
									"// 2. User ID matches URL\r",
									"pm.test(\"User ID matches URL\", () => {\r",
									"    pm.expect(res.id.toString()).to.eql(userIdFromUrl);\r",
									"});\r",
									"\r",
									"// 3. Last name is updated\r",
									"pm.test(\"Last name is updated\", () => {\r",
									"    pm.expect(res.lastName).to.eql(req.lastName);\r",
									"});\r",
									"\r",
									"// 4. Age is updated\r",
									"pm.test(\"Age is updated\", () => {\r",
									"    pm.expect(res.age).to.eql(req.age);\r",
									"});"
